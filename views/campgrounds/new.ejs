<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Enter a new Campground</h1>
        <div style="margin: 30px auto; width: 40%">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter name" name="name" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter image URL" name="image" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter description" name="description" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="Add Campground" />
                </div>
            </form>
            
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>