<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="margin: 30px auto; width: 40%">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="Update Comment" />
                </div>
            </form>
            
            <a href="/campgrounds/<%= campground_id %>">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>